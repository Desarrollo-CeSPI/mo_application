-------------------------------------------------------------------------------
Bases de datos: si username está vacío se asume el nombre de la db
-------------------------------------------------------------------------------
<% @databases.each do |db, db_data| %>
+ <%= db %>
  <% db_data.select {|k,v| %w(name username password host port type).include? k}.each do |k,v| %>
    - <%= "#{k}: #{v}" %>
  <% end %>

<% end %>
